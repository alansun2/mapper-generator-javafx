<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="borderPane" managed="false" visible="false"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/mybatis-table-setup.css"
            fx:controller="com.alan344.controller.MybatisTableSetupController">
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 10 0">
            <VBox spacing="15">
                <HBox fx:id="mapperCheckBoxHbox1" alignment="CENTER" spacing="15">
                    <CheckBox mnemonicParsing="false" selected="true" text="updateExample"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="deleteExample"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="selectExample"/>
                </HBox>
                <HBox fx:id="mapperCheckBoxHbox2" alignment="CENTER" spacing="15">
                    <CheckBox mnemonicParsing="false" text="insert返回id"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="insert"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="count"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="update"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="delete"/>
                    <CheckBox mnemonicParsing="false" selected="true" text="select"/>
                </HBox>
            </VBox>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="mainStackPane">
            <ListView fx:id="listView">
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <MenuItem onAction="#refreshTableColumn" text="刷新字段">
                                <graphic>
                                    <FontIcon iconLiteral="unis-refresh:16:GRAY"/>
                                </graphic>
                            </MenuItem>
                            <MenuItem onAction="#advancedSetUp" text="高级设置">
                                <graphic>
                                    <FontIcon iconLiteral="unil-setting:16:#3CA8E0"/>
                                </graphic>
                            </MenuItem>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </ListView>
        </StackPane>
    </center>
    <bottom>
        <HBox prefHeight="40.0" alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 10">
            <Button mnemonicParsing="false" prefWidth="70" text="下一步" onAction="#next"/>
        </HBox>
    </bottom>
</BorderPane>


