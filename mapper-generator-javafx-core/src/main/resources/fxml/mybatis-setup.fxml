<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane stylesheets="@../css/mybatis-setup.css"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alan344.controller.MybatisSetupController">
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.2">
            <BorderPane fx:id="setUpListBoardPane" minWidth="200" maxWidth="400">
                <top>
                    <Button fx:id="addBtn" focusTraversable="false" layoutX="6.0" layoutY="3.0" mnemonicParsing="false"
                            onAction="#addEmptyExportPane" styleClass="addConfigButton" text="+添加"/>
                </top>
                <center>
                    <ListView fx:id="selectConfigLV"/>
                </center>
            </BorderPane>
        </SplitPane>
    </center>
    <bottom>
        <HBox prefHeight="40.0" alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 20;">
            <Button mnemonicParsing="false" prefWidth="70" text="保存配置" onAction="#saveSetUp"/>
            <Button mnemonicParsing="false" prefWidth="70" text="导出" onAction="#export"/>
            <Button mnemonicParsing="false" prefWidth="70" text="返回" onAction="#pre"/>
            <Button mnemonicParsing="false" prefWidth="70" text="下一步" onAction="#next"/>
        </HBox>
    </bottom>
</BorderPane>
